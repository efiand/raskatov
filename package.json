{
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@fastify/pre-commit": "2.2.0",
		"@html-validate/jest-config": "3.13.0",
		"@types/amphtml-validator": "1.0.4",
		"@types/jest": "30.0.0",
		"@types/node": "24.1.0",
		"amphtml-validator": "1.0.38",
		"html-validate": "9.7.1",
		"jest": "30.0.5",
		"nodemon": "3.1.10",
		"posthtml-bem-linter": "0.1.7",
		"typescript": "5.9.2"
	},
	"imports": {
		"#server/*": "./server/*"
	},
	"main": "./server/main.js",
	"name": "raskatov",
	"pre-commit": [
		"lint-format",
		"test"
	],
	"private": true,
	"scripts": {
		"build": "node ./tools/build.js",
		"dev": "nodemon ./server/dev.js",
		"lint": "npm run type-check && biome check",
		"lint-format": "npm run type-check && biome check --write",
		"test": "jest",
		"type-check": "tsc -p ./jsconfig.json",
		"upgrade": "node ./tools/upgrade.js"
	},
	"type": "module"
}
